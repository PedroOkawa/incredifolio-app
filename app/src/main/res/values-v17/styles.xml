<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- EDIT TEXT -->
    <style name="EditText">
        <item name="android:textSize">@dimen/style_text_size_large</item>
        <item name="android:paddingTop">@dimen/style_form_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/style_form_vertical_padding</item>
        <item name="android:paddingStart">@dimen/style_form_vertical_padding</item>
        <item name="android:paddingEnd">@dimen/style_form_vertical_padding</item>
    </style>

    <style name="EditText.FormAccent">
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textColorHint">@color/color_accent_transparent</item>
        <item name="android:background">@drawable/background_dark_border_accent</item>
        <item name="android:layout_marginTop">@dimen/style_form_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/style_form_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/style_form_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/style_form_horizontal_margin</item>
    </style>

</resources>