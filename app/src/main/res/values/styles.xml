<resources>

    <!-- BASE THEME -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.Initial">
        <item name="android:background">@drawable/splash_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.Main">
        <item name="android:background">@color/color_background_main</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.Foreground">
        <item name="android:background">@color/color_background_foreground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- TEXT VIEW -->
    <style name="TextView">

    </style>

    <style name="TextView.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/style_title_margin</item>
    </style>

    <style name="TextView.Title.Accent">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="TextView.Title.Link">
        <item name="android:textColor">@drawable/text_view_selector_accent_accent_dark</item>
    </style>


    <!-- EDIT TEXT -->
    <style name="EditText">
        <item name="android:textSize">@dimen/style_text_size_large</item>
        <item name="android:paddingTop">@dimen/style_form_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/style_form_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/style_form_vertical_padding</item>
        <item name="android:paddingRight">@dimen/style_form_vertical_padding</item>
    </style>

    <style name="EditText.FormAccent">
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textColorHint">@color/color_accent_transparent</item>
        <item name="android:background">@drawable/background_dark_border_accent</item>
        <item name="android:layout_marginTop">@dimen/style_form_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/style_form_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/style_form_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/style_form_horizontal_margin</item>
    </style>

    <!-- BUTTON -->
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/style_button_margin</item>
    </style>

    <style name="Button.Accent">
        <item name="android:background">@drawable/button_selector_transparent_accent</item>
        <item name="android:textColor">@drawable/text_view_selector_accent_primary_dark</item>
    </style>

</resources>
